# Multi-Agent Custom Automation Engine Configuration

# Environment
ENVIRONMENT=development
DEBUG=true

# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT="https://your-azure-openai-endpoint.openai.azure.com/"
AZURE_OPENAI_API_KEY="your-azure-openai-api-key"
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4o-mini
AZURE_OPENAI_API_VERSION=2024-12-01-preview
AZURE_OPENAI_MAX_RETRIES=3
AZURE_OPENAI_TIMEOUT_SECONDS=60

# Azure Cosmos DB Configuration
COSMOS_DB_ENDPOINT="https://your-cosmos-db-account.documents.azure.com:443/"
COSMOS_DB_KEY="your-cosmos-db-primary-key"
COSMOS_DB_DATABASE_NAME=multi-agent-engine
COSMOS_DB_CONTAINER_NAME=tasks
COSMOS_DB_MAX_RETRIES=3
COSMOS_DB_TIMEOUT_SECONDS=30

# Azure Key Vault Configuration (Optional - leave empty if not using)
KEY_VAULT_URL=
KEY_VAULT_USE_MANAGED_IDENTITY=false

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_TIMEOUT_SECONDS=300
API_CORS_ORIGINS=["*"]
API_ENABLE_AUTH=false

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_ENABLE_FILE_LOGGING=false
LOG_LOG_FILE_PATH=logs/app.log

# Performance Configuration
PERF_MAX_CONCURRENT_TASKS=10
PERF_TASK_TIMEOUT_SECONDS=600
PERF_RETRY_MAX_ATTEMPTS=3
PERF_RETRY_BACKOFF_SECONDS=2
PERF_RETRY_BACKOFF_MAX_SECONDS=60
PERF_ENABLE_RESPONSE_CACHING=true
PERF_CACHE_TTL_SECONDS=3600

# Monitoring Configuration
MONITORING_ENABLE_APPLICATION_INSIGHTS=false
MONITORING_APPLICATION_INSIGHTS_CONNECTION_STRING=
MONITORING_ENABLE_PROMETHEUS=false
MONITORING_METRICS_PORT=9090